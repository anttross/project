<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jce.ant.project.EditActivity">



    <ImageView
        android:id="@+id/imageView"


















































































































        
        android:layout_alignRight="@+id/editView"
        android:layout_alignEnd="@+id/editView"
        android:layout_alignLeft="@+id/editView"
        android:layout_alignStart="@+id/editView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addText"
        android:layout_alignTop="@+id/editView"
        android:layout_marginBottom="95dp"
        android:scaleType="matrix"/>

    <EditText
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="With love"
        android:id="@+id/addTextView"
        android:paddingBottom="95dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#dd2222" />

    <com.jce.ant.project.EditView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editView"
        android:layout_marginTop="55dp" />

    <com.jce.ant.project.EditViewMask
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editViewMask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit your canvas"
        android:id="@+id/ancorTextView"
        android:paddingBottom="15dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addPic"
        android:src="@drawable/add"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/editView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addText"
        android:textSize="10dp"
        android:text="abc.."
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />

    <Spinner
        android:id="@+id/textSizeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/addText"
        android:layout_alignBottom="@+id/addText"
        android:layout_toRightOf="@+id/addText"
        android:layout_toEndOf="@+id/addText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:id="@+id/orderBtn"
        android:layout_alignBottom="@+id/ancorTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
